<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EnterChoreActivity">


    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:id="@+id/textInputLayout">
        <EditText
                android:id="@+id/EnterChoreId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/enter_a_chore"
                android:inputType="textPersonName"
                android:padding="8dp"
                tools:layout_editor_absoluteY="191dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:layout_marginTop="24dp"
            android:id="@+id/textInputLayout2">
        <EditText
                android:id="@+id/AssignedToId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/assigned_to"
                android:inputType="textPersonName"
                android:padding="8dp"
                tools:layout_editor_absoluteY="255dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" android:layout_marginTop="24dp"
            android:id="@+id/textInputLayout3">
        <EditText
                android:id="@+id/AssignedById"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/assigned_by"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteY="319dp" tools:layout_editor_absoluteX="55dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/saveChore"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge_button"
            android:text="@string/save"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="131dp" app:srcCompat="@drawable/ic_chore"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="137dp" android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp"/>


</android.support.constraint.ConstraintLayout>